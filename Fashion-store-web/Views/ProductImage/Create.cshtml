@using Fashion_store_web.Dtos.ProductImage;
@model CreateProductImageDto
<form method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create ProductImage</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="ProductId"></label>
            <input asp-for="ProductId" type="text" class="form-control" />
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ShortName"></label>
            <input asp-for="ShortName" type="text" class="form-control" />
            <span asp-validation-for="ShortName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" type="text" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Slug"></label>
            <input asp-for="Slug" type="text" class="form-control" />
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>

            <div class="col-6">
                <a asp-controller="ProductImage" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>

    </div>

</form>