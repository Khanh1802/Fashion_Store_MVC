@using Fashion_store_web.Dtos.Products;
@model List<ProductDto>
<div class="Container">

    <div class="row pt-4">
        <div class="col-6">
            <h2>
                Product List
            </h2>
        </div>

        <div class="col-3">
            <a asp-controller="Product" asp-action="Create" class="btn">
                <i class="bi bi-plus-circle"></i>  Create New Product
            </a>
        </div>

    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    ShortName
                </th>
                <th>
                    Description
                </th>
                <th>
                    Code
                </th>
                <th>
                    Slug
                </th>
                <th>
                    CreationTime
                </th>
                <th>
                    LastModificationTime
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.ShortName
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.Code
                    </td>
                    <td>
                        @item.Slug
                    </td>
                    <td>
                        @item.CreationTime
                    </td>
                    <td>
                        @item.LastModificationTime
                    </td>
                    <td>
                        <a asp-controller="Product" asp-action="Update" class="btn" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square">Update</i>
                        </a>
                    </td>
                    <td>
                        @*asp-route-id => lấy id*@
                        <a asp-controller="Product" asp-action="Delete" class="btn" asp-route-id="@item.Id">
                            <i class="bi bi-trash-fill">Delete</i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>