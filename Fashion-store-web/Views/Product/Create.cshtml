@using Fashion_store_web.Dtos.Products;
@model CreateProductDto
<form method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId"></label>
            <input asp-for="CategoryId" type="text" class="form-control" />
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ShortName"></label>
            <input asp-for="ShortName" type="text" class="form-control" />
            <span asp-validation-for="ShortName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" type="text" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Slug"></label>
            <input asp-for="Slug" type="text" class="form-control" />
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>
        
        <div>

            <div class="mb-3">
                <label class="form-lable">Select Size</label>
                <select class="form-select" asp-items="Model.SizeSelectList">
                </select>
            </div>

        </div>

        <div class="row">   
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>

            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>

    </div>

</form>